<p style="color: green"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<div id="comments">
  
  <% if @post.comments.present?%>
    <h2>Comments</h2>
     <%= render @post.comments%> <%# shortcut version %>
  <% end %>
 
  <h3>Add a Comment</h3>

  <%= 
    render partial: "comments/form", 
    locals: {comment: @post.comments.new} 
    # hash - not saved instance of the new comment
  %>

</div>

<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Back", posts_path %>
