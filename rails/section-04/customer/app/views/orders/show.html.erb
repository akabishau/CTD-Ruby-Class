<div>
  <h1>Order Details</h1>

  <p><strong>Product Name:</strong> <%= @order.product_name %></p>
  <p><strong>Product Count:</strong> <%= @order.product_count %></p>
  <p><strong>Customer:</strong> <%= @order.customer.full_name %></p>

  <div>
    <%= link_to "Edit this order", edit_order_path(@order) %> |
    <%= link_to "Back to orders", orders_path %>
    <%= button_to "Destroy this order", @order, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>