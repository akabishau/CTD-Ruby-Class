<div class="col-sm-12 col-md-6 col-lg-4 col-xl-3 mb-4">
  <div class="card border border-2 border-success p-1 h-100">
    <div class="card-header">
      <%= order.product_name %>
    </div>
    <div class="card-body">
      <p class="card-text">
        <strong>Count:</strong>
        <%= order.product_count %>
      </p>
      <p class="card-text">
        <strong>Customer:</strong>
        <%= order.customer.full_name %>
      </p>
    </div>
    <div class="card-footer bg-transparent">
      <%= render "shared/buttons/show_button", object: order %>
      <%= render "shared/buttons/edit_button", object: order %>
      <%= render "shared/buttons/delete_button", object: order %>
    </div>
  </div>
</div>
